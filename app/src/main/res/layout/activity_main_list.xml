<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_card">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="80dp"
                android:background="#9887ff"
                app:layout_constraintTop_toTopOf="@id/main_card"
                app:layout_constraintLeft_toLeftOf="@id/main_card"
                android:layout_marginLeft="0dp"
                />

            <TextView
                android:id="@+id/tv_mission_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2f2f2f"
                android:lineSpacingExtra="13sp"
                android:text="1시간 집중하기"
                app:layout_constraintTop_toTopOf="@id/main_card"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="@id/main_card"
                android:layout_marginLeft="24dp"
                />

            <TextView
                android:id="@+id/tv_remain_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="18dp"
                android:lineSpacingExtra="7sp"
                android:text="24시간 남음"
                android:textColor="#888888"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/main_card"
                app:layout_constraintLeft_toLeftOf="@id/main_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="7sp"
                android:text="목표시간 1시간"
                app:layout_constraintLeft_toRightOf="@id/tv_remain_time"
                android:layout_marginLeft="17dp"

                app:layout_constraintBottom_toBottomOf="@id/main_card"
                android:layout_marginBottom="18dp"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_right_arrow_1"
                app:layout_constraintRight_toRightOf="@id/main_card"
                android:layout_marginRight="23dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@id/main_card"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>