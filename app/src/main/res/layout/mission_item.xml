<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mission_view"
            android:layout_width="match_parent"
            android:layout_height="135dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_title"
                android:textSize="20sp"
                android:textColor="#3f3f3f"
                android:text="1시간 러닝하기"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#3f3f3f"
                android:letterSpacing="-0.03"
                android:text="목표시간"
                app:layout_constraintTop_toBottomOf="@id/mission_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="9dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_time"
                android:textSize="16sp"
                android:textColor="#3f3f3f"
                android:letterSpacing="-0.03"
                android:text=" 1시간"
                app:layout_constraintTop_toBottomOf="@id/mission_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="89dp"
                android:layout_marginTop="9dp"
                />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/mission_circle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/mission_view"
                android:layout_marginTop="21dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_member"
                android:textSize="13sp"
                android:textColor="#266ee8"
                android:text="참여현황 보기"
                app:layout_constraintTop_toTopOf="@id/mission_view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="86dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/mission_remain_time"
                android:gravity="center_horizontal"
                android:text="5일"
                app:layout_constraintTop_toTopOf="@id/mission_view"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="60.5dp"
                android:layout_marginTop="47dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="남음"
                app:layout_constraintTop_toTopOf="@id/mission_view"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="60.5dp"
                android:layout_marginTop="67dp"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>